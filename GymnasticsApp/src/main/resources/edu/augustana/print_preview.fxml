<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.PrintPreviewController">
   <top>
      <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Your Print Preview" BorderPane.alignment="CENTER">
         <font>
            <Font name="Times New Roman" size="30.0" />
         </font>
      </Label>
   </top>
   <center>
      <Pane fx:id="mainPane">
         <children>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" />
            <FlowPane fx:id="printPreviewFlowPane" hgap="10.0" prefWrapLength="800.0" vgap="10.0" />
         </children></Pane>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="printButton" alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#printScreen" text="Print">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="returnButton" mnemonicParsing="false" onAction="#returnToPrevScreen" text="Return ">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
