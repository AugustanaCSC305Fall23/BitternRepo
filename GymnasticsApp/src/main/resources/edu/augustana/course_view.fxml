               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Button>
            <Button disable="true" mnemonicParsing="false" onAction="#removeLessonPlanHandler" style="-fx-background-color: DarkGray;" text="Remove Lesson Plan">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Button>
            <Button disable="true" mnemonicParsing="false" onAction="#duplicateLessonPlanHandler" style="-fx-background-color: DarkGray;" text="Duplicate Lesson Plan">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <ListView fx:id="courseListView" layoutX="46.0" layoutY="199.0" prefHeight="553.0" prefWidth="603.0" />
      <Line endX="2000.0" fill="#269fd7" stroke="#eceff2" strokeLineCap="BUTT" strokeWidth="3.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0" />
