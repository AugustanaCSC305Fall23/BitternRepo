          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="createNewCourseMenuItem" mnemonicParsing="false" text="Create New Course" />
                  <MenuItem fx:id="openCourseMenuItem" mnemonicParsing="false" text="Open Course" />
                  <MenuItem fx:id="saveCourseMenuItem" mnemonicParsing="false" text="Save Course" />
