<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="courseTitleLabel" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.ui.CourseViewController">
   <children>
      <Label fx:id="titleLabel" alignment="CENTER" layoutY="14.0" prefHeight="50.0" prefWidth="600.0" text="Course Title" textAlignment="CENTER" wrapText="true" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="14.0">
         <font>
            <Font name="Britannic Bold" size="40.0" />
         </font>
      </Label>
      <ScrollPane layoutX="50.0" layoutY="137.0" AnchorPane.bottomAnchor="83.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="137.0">
         <padding>
            <Insets bottom="10.0" left="50.0" right="50.0" top="20.0" />
         </padding>
         <content>
            <TreeView fx:id="courseTreeView" prefHeight="361.0" prefWidth="596.0" />
         </content>
      </ScrollPane>
      <Button fx:id="homeButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#goToHome" text="Home" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
         <font>
            <Font size="23.0" />
         </font>
      </Button>
      <Button fx:id="createNewLessonPlanBtn" mnemonicParsing="false" onAction="#createLessonPlanHandler" text="Create New Lesson Plan" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0">
         <font>
            <Font size="23.0" />
         </font>
      </Button>
      <MenuBar layoutX="61.0" layoutY="7.0" prefHeight="27.0" prefWidth="94.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#menuActionOpenCourse" text="Open Course" />
                  <MenuItem mnemonicParsing="false" onAction="#menuActionSave" text="Save Course" />
                  <MenuItem mnemonicParsing="false" onAction="#menuActionSaveAs" text="Save Course as..." />
                  <MenuItem mnemonicParsing="false" onAction="#menuActionCreateNewCourse" text="Create New Course" />
              <MenuItem mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>

      <Button fx:id="editLessonPlanBtn" layoutX="303.0" layoutY="585.0" mnemonicParsing="false" onAction="#editLessonPlanHandler" text="Edit Lesson Plan" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="303.0">
         <font>
            <Font size="23.0" />
         </font>
      </Button>

      <HBox alignment="CENTER" focusTraversable="true" spacing="125.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="100.0">
         <children>
            <Button fx:id="doneBtn" mnemonicParsing="false" onAction="#setTitle" text="Done" />
            <Button fx:id="editTitleBtn" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#switchToEditTitleView" text="Edit Title" />
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#switchToCourseOutlineView" text="Cancel" />
         </children>
      </HBox>
      <TextField fx:id="titleField" alignment="CENTER" layoutX="198.0" layoutY="21.0" prefHeight="44.0" prefWidth="412.0" AnchorPane.leftAnchor="198.0" AnchorPane.rightAnchor="190.0" AnchorPane.topAnchor="14.0">
         <font>
            <Font name="Britannic Bold" size="40.0" />
         </font></TextField>
      <Button layoutX="506.0" layoutY="585.0" mnemonicParsing="false" onAction="#removeLessonPlanHandler" text="Remove Lesson Plan">
         <font>
            <Font size="23.0" />
         </font>
      </Button>

   </children>
</AnchorPane>
