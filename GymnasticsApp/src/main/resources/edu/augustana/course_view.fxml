            <Font size="23.0" />
         </font>
         <tooltip>
            <Tooltip text="Return to home screen">
               <font>
                  <Font size="11.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
      <MenuBar AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
